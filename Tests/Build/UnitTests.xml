<phpunit
        bootstrap="../../../../../../vendor/typo3/testing-framework/Resources/Core/Build/UnitTestsBootstrap.php"
        colors="true"
        processIsolation="true"
        stopOnSkipped="false"
        stopOnError="true"
        stopOnFailure="true"
>
    <filter>
        <whitelist>
            <directory>../../Classes/</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="general">
            <directory>../Unit/</directory>
        </testsuite>
    </testsuites>
</phpunit>
