{
    "name": "test/flogin",
    "description": "Testing sandbox for extensions",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {"type": "composer", "url": "https://composer.typo3.org/"},
        {"type": "git", "url": "https://github.com/Lacr1ma/codeception-email-mailhog.git"}
    ],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "bin-dir": "bin",
        "vendor-dir": "vendor",
        "apcu-autoloader": true,
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "require": {
        "bk2k/bootstrap-package": "dev-master",
        "typo3/cms-beuser": "v11.4.0",
        "typo3/cms-scheduler": "v11.4.0",
        "typo3/cms-tstemplate": "11.4.0",
        "typo3/cms-fluid-styled-content": "11.4.0",

        "lms/flogin": "v11.x-dev"
    },
    "require-dev": {
        "vimeo/psalm": "^4.10",
        "mockery/mockery": "^1.4.3",
        "typo3/testing-framework": "^6.11.0",
        "codeception/codeception": "^4.1.22",
        "codeception/module-rest": "^1.3",
        "codeception/module-phpbrowser": "^1.0",
        "codeception/module-db": "^1.1",
        "codeception/module-cli": "^1.1",
        "ericmartel/codeception-email-mailhog": "dev-master",
        "codeception/module-asserts": "^1.3",
        "codeception/module-filesystem": "^1.0",
        "codeception/module-webdriver": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "LMS\\Flogin\\": "public/typo3conf/ext/flogin/Classes",
            "LMS\\Flogin\\Tests\\": "public/typo3conf/ext/flogin/Tests"
        }
    }
}
